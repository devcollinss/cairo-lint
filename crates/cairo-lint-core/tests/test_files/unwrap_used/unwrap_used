//! > ==========================================================================

//! > Unwrap in Function Definition

//! > cairo_code
fn wrapping_unwrap(self: Option<u32>) -> u32 {
  self.unwrap()
}

//! > diagnostics
warning: Plugin diagnostic: Use of unwrap() detected. Consider using '?' or 'expect()' instead.
--> lib.cairo:2:12
|
2 |     self.unwrap()
|          ^^^^^^^
|

//! > fixed
fn wrapping_unwrap(self: Option<u32>) -> u32 {
  self.unwrap()
}

